{
  "manifest_version": 3,
  "name": "AI Auto Dark Mode",
  "version": "1.0.0",
  "description": "Automatically converts any website to a beautiful dark mode using AI.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "sidePanel",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:3000/",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ai-learning.js", "add-dark-class.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "AI Auto Dark Mode",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
