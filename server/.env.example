# Environment Configuration for AI Auto Dark Mode Backend
# Copy this file to .env and fill in your actual values

# =============================================================================
# GOOGLE GEMINI API CONFIGURATION
# =============================================================================

# Your Google Gemini API key (required for AI functionality)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the backend server (default: 3000)
PORT=3000

# Environment (development, production)
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Gemini API endpoint (leave as default unless using custom proxy)
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models

# Request timeout in milliseconds (default: 30000 = 30 seconds)
REQUEST_TIMEOUT=30000

# Maximum retries for failed API calls (default: 3)
MAX_RETRIES=3

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limit: requests per minute per IP (default: 60)
RATE_LIMIT_PER_MINUTE=60

# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# Log file path (optional, logs to console if not specified)
LOG_FILE_PATH=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS allowed origins (comma-separated)
# For development: chrome-extension://*,moz-extension://*
# For production: your-domain.com
CORS_ORIGINS=chrome-extension://*,moz-extension://*

# Enable HTTPS redirect (true/false) - set to true in production
FORCE_HTTPS=false

# Session secret for JWT signing (generate a random string)
SESSION_SECRET=your_secret_key_here

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Enable response caching (true/false)
ENABLE_CACHING=true

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Maximum cache size in MB (default: 100)
MAX_CACHE_SIZE=100

# =============================================================================
# DATABASE CONFIGURATION (Optional - for analytics)
# =============================================================================

# Database URL (if using external database)
DATABASE_URL=

# Enable analytics storage (true/false)
ENABLE_ANALYTICS=true

# Analytics data retention in days (default: 30)
ANALYTICS_RETENTION_DAYS=30

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================

# Enable health check endpoint (true/false)
ENABLE_HEALTH_CHECK=true

# Health check interval in seconds (default: 60)
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Maximum request body size (default: 10mb)
MAX_REQUEST_SIZE=10mb

# Request timeout for external APIs in milliseconds
EXTERNAL_API_TIMEOUT=15000

# Enable compression (true/false)
ENABLE_COMPRESSION=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode (true/false) - more verbose logging
DEBUG_MODE=false

# Enable API request/response logging (true/false)
LOG_API_CALLS=false

# Allow insecure connections in development (true/false)
ALLOW_INSECURE=true

# =============================================================================
# EXAMPLE VALUES FOR QUICK SETUP
# =============================================================================

# For quick local development, uncomment and modify these:
# GEMINI_API_KEY=AIzaSyDxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# PORT=3000
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_REQUEST_LOGGING=true
# CORS_ORIGINS=chrome-extension://*,moz-extension://*
# DEBUG_MODE=true
